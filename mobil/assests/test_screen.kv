<TestScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        TextInput:
            id: test_input
            hint_text: "Test sonucu yaz"
            multiline: True

        Button:
            text: "Testi Gönder"
            on_release: root.submit_test()

        Label:
            id: test_status
            text: ""

        Button:
            text: "Geçmişi Göster"
            on_release: root.load_history()

        Label:
            id: history
            text: ""
